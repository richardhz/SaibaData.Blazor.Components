@namespace SaibaData.Blazor.Components
<div class="sncl-card round-top @RoundBaseCssClass @CssClass">
    <div class="@HeaderCssClass">
        <span>@Header</span> 
        @if (@Collapsible) {
            @if (@Collapsed)
            {
                <div class="action-right" @onclick="OnShowHideClick"   aria-hidden="true">
                   <SbrSvg ResourceName="library/svgs/DownArrow.svg"></SbrSvg>
                </div>
            }
            else
            {
                <div class="action-right"  @onclick="OnShowHideClick" aria-hidden="true">
                   <SbrSvg ResourceName="library/svgs/UpArrow.svg"></SbrSvg>
                </div>
            }
        }
    </div>
    @if (!@Collapsed)
    {
        <div class="card-body">
            @Body
        </div>
        <div class="@RoundBaseCssClass @ActiveCssClass">
            @Actions
        </div>
    }
</div>
